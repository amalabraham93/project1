<script>
    
    function incqty(id) {
        let currentQty = parseInt($('#'+id).val());
        let newQty = currentQty + 1;

        $.ajax({
            url: '/incqty/' + id,
            type: 'GET',
            success: function (response) {
                $('#'+id).val(newQty);
                // update the subtotal for the specific product
                let price = parseInt($('#price'+id).text());
                $('#total1'+id).val(newQty * price);
                 $('#sst'+id).text( '$'+newQty * price);
                // recalculate the total bill
                let alltotal = 0;
                $('.prototal').each(function() {
                    alltotal += parseInt($(this).val());
                });
                $('#billtotal').text('$'+alltotal);
                $('#totalbill').text('$'+alltotal);
            }
        });
    }

    function decqty(id) {
        let currentQty = parseInt($('#'+id).val());
        if (currentQty <= 1) return; // minimum qty is 1
        let newQty = currentQty - 1;

        $.ajax({
            url: '/decqty/' + id,
            type: 'GET',
            success: function (response) {
                $('#'+id).val(newQty);
                // update the subtotal for the specific product
                let price = parseInt($('#price'+id).text());
                $('#total1'+id).val(newQty * price);
                  $('#sst'+id).text('$'+newQty * price);
                // recalculate the total bill
                let alltotal = 0;
                $('.prototal').each(function() {
                    alltotal += parseInt($(this).val());
                });
                $('#billtotal').text('$'+alltotal);
                $('#totalbill').text('$'+alltotal);
            }
        });
    }
</script>




