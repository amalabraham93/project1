<form action="/admin/addnewcategory" method="post">
    <div class="mb-3">
        <label class="form-label" for="form3Example1c">Category Name</label>
        <input type="text" id="form3Example1c" class="form-control" name="categoryname"  required/>
        <label for="exampleInputEmail1" class="form-label"> Discription</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="discription" required>
    </div>


    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Status</label>
        {{!-- <input type="text" class="form-control" id="exampleInputPassword1" name="status"> --}}
        <select class="form-select" aria-label="Default select example" name="status"  required>
            <option selected >select</option>
            <option value="In Stock">In Stock</option>
            <option value="Out of Stock">Out of Stock</option>
        </select>

    </div>
    {{#if categorystatus}}
    <div class="alert alert-danger text-center mb-3">{{categorystatus}}</div>
    {{/if}}
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


