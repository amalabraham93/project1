{{>admin_nav}}




<form action="/admin/sales-report" method="post">
  <label for="start-date">Start Date</label>
  <input type="date" id="start-date" name="start-date">

  <label for="end-date">End Date</label>
  <input type="date" id="end-date" name="end-date">

  <button type="submit">Generate Report</button>
</form>






{{#if orders}}

  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Customer Name</th>
        <th>Product Name</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
           {{#each order}}

      
        <tr>
          <td>{{this.order_id}}</td>
          <td>{{formatDate this.order_date}}</td>
          <td>{{../name}}</td>
          <td>{{this.product.product.[0].Name}}</td>
          <td>{{this.product.product.[0].Price}}</td>
        </tr>
          {{/each}}
      {{/each}}
    </tbody>
  </table>
  {{startDate}}
  <br>
    <a href="/admin/sales-report/excel?startDate={{startDate}}&endDate={{endDate}}">Download Excel</a>
    <a href="/admin/sales-report/pdf?startDate={{startDate}}&endDate={{endDate}}">Download PDF</a>
{{else}}
  <p>No orders found</p>
{{/if}}
